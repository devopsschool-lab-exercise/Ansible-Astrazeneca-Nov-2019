sudo ansible localhost -m group -a "name=deploy-user state=present"
sudo ansible localhost -m user -a "name=deploy state=present"
sudo ansible localhost -m yum -a"name=httpd state=present"	
sudo ansible localhost -m copy -a"dest=/var/www/html src=index.html"
sudo ansible localhost -m service -a"name=httpd state=started"
sudo ansible localhost -m yum -a"name=git"
sudo ansible localhost -m yum -a"name=wget"
sudo ansible localhost -m git -a "repo=https://github.com/ansible/ansible-examples.git dest=/home/ec2-user/git clone=yes"
sudo ansible localhost -m file -a "name=devopsschool.txt state=absent"
sudo ansible localhost -m reboot
