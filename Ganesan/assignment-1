
ansible localhost -m group -a "name=deploy state=present"
ansible localhost -m user -a "name=deploy-user group=deploy state=present shell=/bin/bash"
ansible localhost -m yum -a "name=httpd state=present"
ansible localhost -m service -a "state=started enabled=yes"
ansible localhost -m file -a "state=touch  path=/var/www/html/index.html"
ansible localhost -m copy -a "src=/root/second.html dest=/var/www/html/"
ansible localhost -m yum -a "name=git,wget state=present"
ansible localhost -m git -a "repo=https://github.com/scmgalaxy/ansible-role-template dest=/tmp/repo"
ansible localhost  -a "reboot"
ansible localhost -m file -a "state=touch path=/opt/devopsschool.txt"
ansible localhost -m file -a "state=absent path=/opt/devopsschool.txt"
